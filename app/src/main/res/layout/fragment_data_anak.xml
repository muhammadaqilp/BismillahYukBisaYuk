<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DataAnakBaru">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_profile"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tgl_imunisasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:letterSpacing="0.02"
            android:text="Informasi Anak"
            android:textColor="@color/blackTextColor"
            android:textSize="16dp"
            android:typeface="serif"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:letterSpacing="0.02"
                android:text="7 Maret 2020"
                android:textColor="@color/blackTextColor"
                android:textSize="16dp"
                android:typeface="serif"
                android:textAlignment="textEnd"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/beratbadan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berat Badan"
                android:fontFamily="@font/open_sans"
                style="@style/subheadInfoAnak"/>
            <TextView
                android:layout_below="@id/beratbadan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 kg"
                style="@style/isiInfoAnak"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/tinggibadan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tinggi badan"
                android:fontFamily="@font/open_sans"
                style="@style/subheadInfoAnak"/>
            <TextView
                android:layout_below="@id/tinggibadan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80 cm"
                style="@style/isiInfoAnak"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:fontFamily="@font/open_sans"
                style="@style/subheadInfoAnak"/>
            <TextView
                android:layout_below="@id/umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 bulan"
                style="@style/isiInfoAnak"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/imunisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imunisasi"
                android:fontFamily="@font/open_sans"
                style="@style/subheadInfoAnak"/>
            <TextView
                android:layout_below="@id/imunisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="suntik sehat"
                style="@style/isiInfoAnak"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/vitamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin"
                android:fontFamily="@font/open_sans"
                style="@style/subheadInfoAnak"/>
            <TextView
                android:layout_below="@id/vitamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin B"
                style="@style/isiInfoAnak"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>